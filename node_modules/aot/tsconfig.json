{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["esnext.asynciterable", "es2017", "es2018"],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es2017",
        "allowJs": false,
        "outDir": "dist"
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],
    "exclude": ["node_modules"],
    "compileOnSave": false
}